<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Bimal">


    <TextView
        android:id="@+id/tvBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Body Mass Index"
        android:gravity="center"
        android:textSize="28dp"
        />

    <TextView
        android:id="@+id/tvWeight"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Your Weight(kg)"
        android:textSize="30dp"
        android:layout_below="@+id/tvBMI"
        />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:inputType="number"
        android:layout_below="@+id/tvBMI"
        android:layout_toEndOf="@+id/tvWeight"
        />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Your height(cm)"
        android:textSize="30dp"
        android:layout_below="@+id/tvWeight"
        />

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:inputType="number"
        android:layout_below="@+id/tvWeight"
        android:layout_toEndOf="@+id/tvHeight"

        />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="10dp"
        android:text="Calculate"
        android:textSize="25dp"
        android:layout_below="@+id/tvHeight"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Your BMI:"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnCalculate"
        />

    <TextView
        android:id="@+id/tvBMIResult"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:layout_below="@+id/btnCalculate"
        android:layout_toEndOf="@+id/tvResult"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>